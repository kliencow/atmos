# Atmos Configuration Template
# Copy this to .env and fill in your details

# --- AirGradient Sensor ---
# Either SENSOR_IP or SENSOR_SERIAL must be provided.
# Example: 192.168.50.78 or 001122334455
SENSOR_IP=192.168.1.100
SENSOR_SERIAL=

# --- InfluxDB Connection ---
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=YOUR_SECRET_INFLUX_TOKEN_HERE
INFLUX_ORG=atmos
INFLUX_BUCKET=air_quality

# --- Docker Initialization (Only used for first-time setup) ---
INFLUX_USER=wally
INFLUX_PASSWORD=change_me_immediately
GRAFANA_PASSWORD=admin

# --- Application Settings ---
POLLING_INTERVAL=1m
DEBUG=false
EXIT_ON_ERROR=false
